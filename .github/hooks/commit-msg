#!/bin/bash

# TDD Commit Message Validation Hook for ByteHot
# This hook validates commit messages against the TDD workflow from CLAUDE.md
#
# To install this hook:
# cp .github/hooks/commit-msg .git/hooks/commit-msg
# chmod +x .git/hooks/commit-msg

# Get the directory of this script
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/../.." && pwd)"

# Run the TDD commit validation script
exec "$REPO_ROOT/.github/scripts/validate-tdd-commit.sh" "$1"